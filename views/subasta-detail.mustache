<!DOCTYPE html>
<html lang="en">
  
    {{> template/head }}

  <body>
  
  {{> template/navbar }}

    <div class="site-blocks-cover-reduced site-blocks-cover  inner-page-cover overlay reduced-overlay" style="background-image: url(/images/hero_bg_2.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
      <div class="container">
        <div class="row align-items-center justify-content-center text-center">
          <div class="col-md-10">
            <span class="d-inline-block text-white px-3 mb-5 mt-3 property-offer-type rounded"> Detalles de la Subasta</span>
            <h1 class="mb-2">{{propiedad.direccion}} {{propiedad.ciudad}}, {{propiedad.provincia}}</h1>
          </div>
        </div>
      </div>
    </div>

    <div class="site-section site-section-sm">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div>
              {{#mensaje}}
                <h2 class="text-center text-danger">
                  {{texto}}
                </h2>
              {{/mensaje}}
              <div class="slide-one-item home-slider owl-carousel">
                <div><img src="{{propiedad.imagen}}" alt="Image" class="img-fluid"></div>
                <div><img src="{{propiedad.imagen}}" alt="Image" class="img-fluid"></div>
                <div><img src="{{propiedad.imagen}}" alt="Image" class="img-fluid"></div>
              </div>
            </div>
            <div class="bg-white property-body border-bottom border-left border-right">
              
              <div class="row mb-5">
                <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                  <span class="d-inline-block text-black mb-0 caption-text">Tipo</span>
                  <strong class="d-block">{{propiedad.tipo}}</strong>
                </div>
                <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                  <span class="d-inline-block text-black mb-0 caption-text">Ciudad</span>
                  <strong class="d-block">{{propiedad.ciudad}}</strong>
                </div>
                <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                  <span class="d-inline-block text-black mb-0 caption-text">Provincia</span>
                  <strong class="d-block">{{propiedad.provincia}}</strong>
                </div>
              </div>
              <h2 class="h4 text-black">Descripcion</h2>
              <p>{{propiedad.descripcion}}</p>
              <h2 class="h4 text-black">Detalles de la subasta</h2>
              <div class="container">
                <h4 class="mt-3">Semana de alojamiento: {{periodo}}</h4>
                <h4 class="mt-3">Monto actual: ${{montoActual}}</h4>
                <form action="/pujar/{{propiedad._id}}/{{numeroSemana}}" method="post" class="form-horizontal">
                  <div class="form-group row mx-0 mt-3">  
                    <label for="fname" class="h4 control-label">Monto a Pujar</label>
                    <div class="col-sm-5">
                      <input type="text" name="monto" class="form-control" id="fname" placeholder="Ingrese monto">
                    </div>
                  </div>
                  <input type="submit" value="Pujar" class="btn btn-primary  py-2 px-4 rounded-0">
                </form>
              </div>
            </div>
          </div>  
        </div>
        
      </div>
    </div>

    {{> template/footer }}

  </div>

  {{> template/scripts }}
    
  </body>
</html>