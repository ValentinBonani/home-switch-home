<!DOCTYPE html>
<html dir="ltr" lang="en">

{{> admin/template/head }}

<body>

    {{> admin/template/header }}

        <div class="page-wrapper">
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title"></h4>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-7">
                                        <h5 class="card-title">Usuarios</h5>
                                    </div>
                                    <div class="col-5">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">Buscar Usuarios</span>
                                            </div>
                                            <input id="searchInput" type="text" class="form-control" placeholder="Buscar..." aria-label="Buscar..." aria-describedby="basic-addon1">
                                        </div>
                                    </div>
                                </div>
                                <div class="table-responsive">
                                    <table id="zero_config" class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr id="thead">
                                                <th>Nombre Completo</th>
                                                <th>Email</th>
                                                <th>Tipo de Cuenta</th>
                                                <th>Fecha de Ingreso</th>
                                                <th>Pedido</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#usuarios}}
                                                <tr id="trow" class="cursor-pointer">
                                                        <td>{{nombreCompleto}}</td>
                                                        <td>{{email}}</td>
                                                        <td>
                                                        {{#tipo}}Premium{{/tipo}}
                                                        {{^tipo}}Standard{{/tipo}}
                                                        </td>
                                                        <td>{{fechaDeIngreso}}</td>
                                                        <td class="text-center">
                                                            {{#pedido}}
                                                                <span class="mdi mdi-check text-success" style="font-size:1.5rem">
                                                                <span hidden> pedido </span>
                                                            {{/pedido}}
                                                            {{^pedido}}
                                                                <span class="mdi mdi-close text-danger" style="font-size:1.5rem">
                                                            {{/pedido}}
                                                        </td>
                                                        <td>
                                                            <a class="btn btn-success" href="/admin/user-details/{{_id}}">Ver Mas</a>
                                                        </td>
                                                </tr>
                                            {{/usuarios}}
                                        </tbody>
                                    </table>
                                    
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{> admin/template/footer }}
        </div>
    </div>
    {{> admin/template/scripts }}
</body>

<script>
$(document).ready(function(){
  $("#searchInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#zero_config #trow").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>

</html>