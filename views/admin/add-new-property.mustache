<!DOCTYPE html>
<html dir="ltr" lang="en">

{{> admin/template/head }}

<body>
    {{> admin/template/header }}
        <div class="page-wrapper">

            <div class="container-fluid">
 
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <div class="card">
                            <form action="/propiedades" method="post" class="form-horizontal">
                                <div class="card-body">
                                    <h4 class="card-title">Nueva Propiedad</h4>
                                    <div class="form-group row">
                                        <label for="fname" class="col-sm-3 text-right control-label col-form-label">Pais</label>
                                        <div class="col-sm-9">
                                            <input type="text" name="pais" class="form-control" id="fname" placeholder="Ingrese Pais">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="lname" class="col-sm-3 text-right control-label col-form-label">Ciudad</label>
                                        <div class="col-sm-9">
                                            <input name="ciudad" type="text" class="form-control" id="lname" placeholder="Ingrese Ciudad">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="lname" class="col-sm-3 text-right control-label col-form-label">Direccion</label>
                                        <div class="col-sm-9">
                                            <input type="text" name="direccion" class="form-control" id="lname" placeholder="Ingrese Direccion">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="email1" class="col-sm-3 text-right control-label col-form-label">Tipo</label>
                                        <div class="col-sm-9">
                                            <input type="text" name="tipo" class="form-control" id="email1" placeholder="Ingrese Tipo">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="cono1" class="col-sm-3 text-right control-label col-form-label">Imagen</label>
                                        <div class="col-sm-9">
                                            <input type="text" name="imagen" class="form-control" id="cono1" placeholder="Ingrese imagen">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="cono1" class="col-sm-3 text-right control-label col-form-label">Descripcion</label>
                                        <div class="col-sm-9">
                                            <textarea name="descripcion" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="border-top">
                                    <div class="card-body">
                                        <input type="submit" value="Agregar" class="btn btn-primary  py-2 px-4 rounded-0">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                
            </div>
            
            {{> admin/template/footer }}
            
        </div>
        
    </div>

    {{> admin/template/scripts }}

</body>

</html>